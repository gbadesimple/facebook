<section class="section">
  <div class="container">

      <article class="message">

        <p class="title is-5"> All users </p>

        <p><%= link_to "Friend Request", user_friend_requests_path(current_user.id) %></p>

        <% @users.each do |user| %>
          <% next if current_user.id == user.id %>
            <% if user.profile.present? %>
              <strong><%= user.profile.firstname.capitalize %> <%= user.profile.lastname.capitalize %> </strong>
                <%= link_to "Send Friend Request",  user_friend_requests_path(receiver_id: user.id, user_id: current_user.id), method: :POST %><br />
            <% else %>
              <strong><%= user.username.capitalize %> </strong>
                <%= link_to "Send Friend Request",  user_friend_requests_path(receiver_id: user.id, user_id: current_user.id), method: :POST %><br />
            <% end %>
        <% end %><br />

        <%= render "friend_request" %>

        <%= render "friends" %>

        <%= render "pending_request" %>

        <%= render "received_request" %>

        <% @posts.each do |post| %>
        <%= post.title %><br />
        <% end %><br />

        <% if current_user.profile.present? %>
          <%= link_to "View my profile", user_profile_path(current_user), class: "button is-primary" %>
        <% else %>
          <%= link_to "Create new profile", new_user_profile_path(current_user), class: "button is-info" %> <br />
        <% end %>

      </article>
        <strong> You want to know something? just love this </strong><br />

        <p> Continue to <%= link_to "Post", posts_path %> </p>


    </div>
</section>
