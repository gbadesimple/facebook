<h1 class="title is-5"> Friends List:</h1>

<% @requests.each do |request| %>

  <% if request.status == true %>
    <% if request.sender.profile.present? %>
      <strong>  <%= request.sender.profile.firstname.capitalize %> <%= request.sender.profile.lastname %></strong>
      <%= link_to "Unfriend", user_friend_request_path(:id => request.id), method: :DELETE, data: {confirm: "Are you sure you want to unfriend '#{request.sender.username}'?"} %> <br />
    <% else %>
      <strong>  <%= request.sender.username %> </strong>
      <%= link_to "Unfriend", user_friend_request_path(:id => request.id), method: :DELETE, data: {confirm: "Are you sure you want to unfriend '#{request.sender.username}'?"} %> <br />
    <% end %>
  <% end %>


<% end %><br />
