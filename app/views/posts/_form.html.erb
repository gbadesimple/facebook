<%= simple_form_for (@post) do |f| %>
<div class="field">
  <div class="control">
  <%= f.input :title, wrapper: false, input_html: { class: "input", autofocus: true}, label_html: {class: "label"}, placeholder: "Write your post..." %>
  </div>
</div>

<div class="form-action">
  <%= f.submit "Post", class: "button is-info" %>
</div>
<% end %>
